@using Domain.Customer.Models
@using Domain.Enums
@using Ramp.Security.Authorization
@using System.Threading
@using Web.UI.Code.Extensions

@model Ramp.Contracts.ViewModel.TrainingTestViewModel
@{
    if (Thread.CurrentPrincipal.IsInGlobalAdminRole())
    {
        Layout = "../../../../Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "../../../../Views/Shared/_LayoutStandardUser.cshtml";
    }
    ViewBag.Title = "OnRAMP Online Training Platform";

}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> Test </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <p>@Model.ReferenceId - @Model.TestTitle</p>
                    </div>
                    <div class="panel-body">
                        @Html.HiddenFor(m => m.TrainingTestId)
                        @Html.HiddenFor(m => m.TrainingGuideName)
                        @Html.HiddenFor(m => m.TestTitle)
                        <p><strong>Test Duration </strong>: @Model.TestDuration Minutes</p>
                        <p><strong>Test Pass Marks</strong> : @Model.PassMarks %</p>
                        <p><strong>Pass Points </strong>: @Model.PassPoints </p>
                    </div>
                </div>
            </div>
        </div>
        <h1 class="page-header"> Introduction </h1>

        <div class="panel panel-info">
            <div class="panel-heading">@Model.TestTitle</div>
            <div class="panel-body">
                <div class="row" style="padding: 0px 3px 3px 15px;">
                    <p>@Html.Raw(Model.IntroductionContent)</p>
                </div>
            </div>
        </div>

        <p>
            @if (Thread.CurrentPrincipal.IsInGlobalAdminRole())
            {
                <a class="btn btn-success btn-lg" id="StartTest" href="@(Url.Content("~/ManageTrainingTest/ManageTrainingTest/StartTest?trainingTestId=" + Model.TrainingTestId))" style="text-decoration: none;" title="Click here to start the test">
                    Click here to preview test
                </a>
            }
            else
            {
                <a class="btn btn-success btn-lg" id="StartTest" href="@(Url.Content("~/ManageTrainingTest/ManageTrainingTest/StartTest?trainingTestId=" + Model.TrainingTestId))" style="text-decoration: none;" title="Click here to start the test">
                    Click here to start the test
                </a>
            }
        </p>
    </div>
</div>