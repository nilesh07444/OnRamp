@model Ramp.Contracts.ViewModel.CategoryViewModelLong

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm("CreateOrUpdateCategories", "Categories"))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading"> Create a Playbook Category </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.CategorieViewModel.Id)
                            <div class="form-group">
                                @Html.Label("Playbook Category Title")
                                @Html.TextBoxFor(model => model.CategorieViewModel.CategorieTitle, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CategorieViewModel.CategorieTitle)
                            </div>

                            <div class="form-group">
                                @Html.Label("Playbook Category Description")
                                @Html.TextBoxFor(model => model.CategorieViewModel.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CategorieViewModel.Description)
                            </div>

                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}