@using Ramp.Contracts.ViewModel
@model ProvisionalCompanyUserViewModel

<div class="table-responsive">
    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
        <table id="dataTables-example" class="table table-striped table-bordered table-hover dataTable no-footer" aria-describedby="dataTables-example_info">
            <thead>
                <tr role="row">
                    <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 185px;" aria-label="Rendering engine: activate to sort column ascending">
                        @*ClientSystemName*@
                        Company Name
                    </th>
                    <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 185px;" aria-label="Rendering engine: activate to sort column ascending">
                        @*CompanyName*@
                        Create Date
                    </th>
                    <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 185px;" aria-label="Rendering engine: activate to sort column ascending">
                        @*PhysicalAddress*@
                        Bundle
                    </th>
                    <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 185px;" aria-label="Rendering engine: activate to sort column ascending">
                        @*PostalAddress*@
                        Number of Documents
                    </th>
                    @*<th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 185px;" aria-label="Rendering engine: activate to sort column ascending">
                            LayerSubDomain
                        </th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (CompanyViewModel item in Model.CompanyList)
                {
                    <tr class="gradeA odd">
                        <td class="">
                            @*@Html.DisplayFor(modelItem => item.ClientSystemName)*@
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td class="">
                            @*@Html.DisplayFor(modelItem => item.CompanyName)*@
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td class="">
                            @*@Html.DisplayFor(modelItem => item.PhysicalAddress)*@
                            @Html.DisplayFor(modelItem => item.BundleName)
                        </td>
                        <td class="">
                            @*@Html.DisplayFor(modelItem => item.PostalAddress)*@
                            @Html.DisplayFor(modelItem => item.CustomersNumberOfDocuments)
                        </td>
                        @*<td class="">
                                @Html.DisplayFor(modelItem => item.LayerSubDomain)
                            </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript" language="javascript">
    $(function () {
        $('.tooltip-demo').tooltip({
            selector: "[data-toggle=tooltip]",
            container: "body"
        });
        $('#dataTables-example').dataTable();
    });

</script>