@model Ramp.Contracts.ViewModel.BundleViewModel

@using (Html.BeginForm("CreateOrUpdateBundle", "Bundle"))
{
   @* @Html.AntiForgeryToken()*@

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading"> Create a Bundle </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @Html.ValidationSummary(true)
                            @if (Model.BundleViewModelShort != null && Model.BundleViewModelShort.Id != Guid.Empty.ToString())
                            {
                                @Html.HiddenFor(model => model.BundleViewModelShort.Id)
                            }
                            <div class="form-group">
                                @Html.Label("Title")
                                @Html.TextBoxFor(model => model.BundleViewModelShort.Title, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BundleViewModelShort.Title)
                            </div>

                            <div class="form-group">
                                @Html.Label("Description")
                                @Html.TextBoxFor(model => model.BundleViewModelShort.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BundleViewModelShort.Description)
                            </div>

                            <div class="form-group">
                                @Html.Label("Maximum Number Of Documents")
                                @Html.TextBoxFor(model => model.BundleViewModelShort.MaxNumberOfDocuments, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BundleViewModelShort.MaxNumberOfDocuments)
                            </div>

                            <div class="form-group">
                                @Html.Label("Make the default sign-up Bundle :")
                                @Html.CheckBoxFor(model => model.BundleViewModelShort.IsForSelfProvision, new { @id = "IsForSelfProvision" })
                            </div>
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


