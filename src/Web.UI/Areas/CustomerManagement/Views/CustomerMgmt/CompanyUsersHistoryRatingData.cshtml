@using Ramp.Contracts.ViewModel
@model List<Ramp.Contracts.ViewModel.CustomerSurveyDetailViewModel>

@{
    Layout = null;
}
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Rating</th>
                <th>Comments</th>
                <th>Browser</th>
            </tr>
        </thead>
        <tbody>

            @foreach (CustomerSurveyDetailViewModel item in Model)
            {
                <tr>
                    <td>@item.RatedOn</td>
                    <td>
                        <input id='@(item.CustomerSurveyId)' value="@(item.Rating)" disabled="disabled" class="customerRatingHistory form-control" name="Rating" data-min="0" data-max="5" data-step="1" data-size="xs" style="display: none;">
                    </td>
                    <td>
                        @(item.Comment)
                    </td>
                    <td>
                        @(item.Browser)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(function() {
        $(".customerRatingHistory").rating();
    });
</script>