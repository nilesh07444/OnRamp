@model Ramp.Contracts.Events.CustomerSelfSignedUpEvent
@{
    Layout = null;
    var headerPath = Url.Content(AppSettings.Urls.HeaderImageLogoUrl);
    var footerPath = Url.Content(AppSettings.Urls.FooterImageLogoUrl);
    var loginLink = AppSettings.Urls.ResolveUrl("~CustomerManagement/CustomerMgmt/ManageOwnCustomerCompanyUser?companyid=" + @Model.CompanyViewModel.Id
                    + "&userId=" + Guid.Empty + "&companyName=" + @Model.CompanyViewModel.CompanyName);
    var notificationHeader = "#FFFFFF";
    var notificationFooter = "#FFFFFF";


}
<html>
<body>
    @if (Model.NotificationHeaderLogo != null) {
        <img src="data:image/png;base64,@Convert.ToBase64String(Model.NotificationHeaderLogo)" width="100%" height="35" alt="Header Image" class="img-responsive center-block company-logo" />
    } else {
        <img src="@headerPath" width="100%" height="35" alt="Header Image" />
    }

    <br />
    <br />
    <p>Dear @Model.CurrentAdminViewModel.FirstName,</p>
    <p>The following user has signed up for access to your OnRamp Training Portal:</p>
    <table>
        <tr><td><b>First name:</b></td><td>@Model.UserViewModel.FirstName</td></tr>
        <tr><td><b>Surname:</b></td><td>@Model.UserViewModel.LastName</td></tr>
        <tr><td><b>Email address:</b></td><td>@Model.UserViewModel.EmailAddress</td></tr>
        <tr><td><b>Mobile number:</b></td><td>@Model.UserViewModel.MobileNumber</td></tr>
    </table>
    <p>Please click (<a href="@loginLink" title="User account">here</a>) to approve or deny access for this signup request.</p>
    <p>Thanking you,</p>
    <p>Team OnRamp</p>
    <br />
    @if (Model.NotificationFooterLogo != null) {
        <img src="data:image/png;base64,@Convert.ToBase64String(Model.NotificationFooterLogo)" width="100%" height="35" alt="Footer Image" class="img-responsive center-block company-logo" />
    } else {
        <img src="@footerPath" width="100%" height="35" alt="Footer Image" />
    }
    <br />
    <br />
</body>
</html>