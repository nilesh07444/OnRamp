@model Ramp.Contracts.Events.VirtualClassroom.VirtualClassroomEvent
@{
    Layout = null;
    var headerPath = Url.Content(AppSettings.Urls.HeaderImageLogoUrl);
    var footerPath = Url.Content(AppSettings.Urls.FooterImageLogoUrl);
    var loginLink = AppSettings.Urls.ResolveUrl("~Account/LogOff", Model.CompanyViewModel);
    var notificationheader = "#27b899";
    var notificationfooter = "#27b899";

    if (PortalContext.Current != null && PortalContext.Current.UserCompany.CustomColours != null) {
        notificationheader = PortalContext.Current.UserCompany.CustomColours.HeaderColour;
        notificationfooter = PortalContext.Current.UserCompany.CustomColours.FooterColour;
    }
}
<!DOCTYPE html>

<html>
<head>

    <style>

    .headerstyle {
     background: @notificationheader;
     height:40px;
    }
    .footerstyle {
        background: @notificationfooter;
        height: 40px;
    }

    </style>

</head>
<body>
    <div class="headerstyle"></div>
    <br />
    <br />
    <p> @Model.UserViewModel.FirstName,</p>
    <p>
        <span>Please note that you have been sent a Virtual Meeting Invite: </span><br /><br />
        <span>Virtual Meeting Room Name:</span> <span>@Model.MeetingName</span><br />
        <span>Start Date/Time:</span> <span>@Model.StartDate</span><br />
        <span>End Date/Time:</span> <span>@Model.EndDate</span><br />

    </p>
    <br />
    <br />
    <div class="footerstyle"></div>
</body>
</html>
