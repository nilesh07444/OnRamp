@model Ramp.Contracts.Events.GuideManagement.TrainingGuideAssignedEvent

@{
    Layout = null;
    var playbookUrl = AppSettings.Urls.ResolveUrl("~Playbook/" + Model.TrainingGuideViewModel.ReferenceId);
    var footerUrl = AppSettings.Urls.ResolveUrl("~images/powered.png");
    var notificationHeader = "#FFFFFF";
    var notificationFooter = "#FFFFFF";


}

<!DOCTYPE html>

<html>
<head>
</head>
<body>
    <p>Dear @Model.UserViewModel.FirstName,</p>
    <p>
        Please note that you have been assigned the following playbook: <strong>@Model.TrainingGuideViewModel.Title</strong>
    </p>
    <p>
        Click <a href="@playbookUrl">here</a> to view the playbook you've been assigned.
    </p>
    @if (Model.NotificationFooterLogo != null) {
        <img src="data:image/png;base64,@Convert.ToBase64String(Model.NotificationFooterLogo)" width="100%" height="35" alt="Footer Image" class="img-responsive center-block company-logo" />
    } else {
        <img src="@footerUrl" width="100%" height="35" alt="Powered by OnRamp" />
    }
</body>
</html>