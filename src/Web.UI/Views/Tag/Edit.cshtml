@using Ramp.Contracts.ViewModel
@using Common.Web
@model TrainingLabelModel
@{
    Layout = "~/Views/Shared/_LayoutStandardUser.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" data-bind="text:mode"></h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form method="post" enctype="multipart/form-data" data-bind="with:data">
            <div class="form-group">
                <label class="control-label">Name</label>
                <input type="text" class="form-control" name="Name" data-bind="textInput:Name,validatewith:$root.errors"/>
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <input type="text" class="form-control  max-width-none" style="min-width:100%;" data-bind="textInput:Description" />
            </div>
            <button type="submit" class="btn btn-primary" data-bind="click: $root.save.bind()">Save</button>    
        </form>
    </div>
</div>
<script>
    var vm = app.data.crudController(@Html.ToJson(Model),@Html.ToJson((IDictionary<string,string>)ViewBag.Links),@Html.ToJson((string)ViewBag.Mode));
    ko.applyBindings(vm,document.getElementsByTagName('body')[0]);
</script>
